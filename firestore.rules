
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Use this for update/delete rules
    function isExistingOwner(ownerId) {
      return resource != null && isOwner(ownerId);
    }
    
    // Use this for create rules
    function isAuthor() {
      return request.resource.data.userId == request.auth.uid;
    }

    function isChatParticipant(chatId) {
      return isSignedIn()
        && get(/databases/$(database)/documents/chats/$(chatId)).data.users.hasAny([request.auth.uid]);
    }
    
    function isMemberOfChat() {
      return isSignedIn() && request.auth.uid in resource.data.users;
    }

    function isCreatingChatWithSelf() {
        return isSignedIn() && request.auth.uid in request.resource.data.users;
    }
    
    function isCallParticipant(callDoc) {
      return isSignedIn() &&
        (request.auth.uid == callDoc.callerId || request.auth.uid == callDoc.receiverId);
    }

    // users
    match /users/{userId} {
      allow get, list: if true;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) 
        && resource != null
        && request.resource.data.id == resource.data.id;
      allow delete: if false;

      match /posts/{postId} {
        allow read, write: if isOwner(userId);
      }

      match /followers/{followerId} {
        allow read: if true;
        allow write: if isOwner(followerId);
      }

      match /following/{followingId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /highlights/{highlightId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }
    }
    
    // posts
    match /posts/{postId} {
        allow get, list: if true;
        allow create: if isSignedIn() && isAuthor();
        allow update: if isExistingOwner(resource.data.userId) 
                      && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(resource.data.userId);
    }

    // stories
    match /stories/{storyId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAuthor();
      allow update: if false;
      allow delete: if isExistingOwner(resource.data.userId);
    }

    // reels
    match /reels/{reelId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAuthor();
      allow update: if isExistingOwner(resource.data.userId)
                    && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(resource.data.userId);
    }
    
    // comments
    match /comments/{commentId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAuthor();
      allow update: if isExistingOwner(resource.data.userId)
                    && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(resource.data.userId);
    }

    // chats
    match /chats/{chatId} {
      allow get: if isMemberOfChat();
      allow list: if isSignedIn() && request.query.where.users.hasAny([request.auth.uid]);
      allow create: if isCreatingChatWithSelf();
      allow update: if isMemberOfChat()
                    && resource != null
                    && request.resource.data.users == resource.data.users;
      allow delete: if false;

      // messages subcollection
      match /messages/{messageId} {
        allow get, list: if isChatParticipant(chatId);
        allow create: if isChatParticipant(chatId) 
                      && isOwner(request.resource.data.senderId);
        allow update: if isChatParticipant(chatId) 
                      && isExistingOwner(resource.data.senderId);
        allow delete: if isChatParticipant(chatId) 
                      && isExistingOwner(resource.data.senderId);
      }
    }

    // calls
    match /calls/{callId} {
      allow get: if isCallParticipant(resource.data);
      allow list: if false;
      allow create: if isOwner(request.resource.data.callerId);
      allow update: if resource != null && isCallParticipant(resource.data);
      allow delete: if resource != null && isCallParticipant(resource.data);
    }

    // streams
    match /streams/{streamId} {
      // Allow everyone to view streams (just like Twitch)
      allow read: if true;

      // Only logged-in users can create a stream
      allow create: if request.auth != null;

      // Only the true owner can update/delete a stream
      allow update, delete: if request.auth != null
            && request.auth.uid == resource.data.streamerId;

      // Live chat messages inside a stream
      match /live-chat-messages/{messageId} {
        allow read: if true;

        // must be signed in AND must be the author
        allow create: if request.auth != null 
            && request.resource.data.userId == request.auth.uid;

        allow update, delete: if false; // messages cannot be edited or deleted
      }
    }

    // categories
    match /categories/{categoryId} {
      allow get, list: if true;
      allow create: if true; // Allow seeding
      allow update, delete: if false;
    }
    
    // videos
    match /videos/{videoId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.user.id == request.auth.uid;
        allow update, delete: if isExistingOwner(resource.data.user.id);

        match /comments/{commentId} {
            allow get, list: if true;
            allow create: if isSignedIn() && request.resource.data.user.id == request.auth.uid;
            allow update, delete: if isExistingOwner(resource.data.user.id);
        }
    }
  }
}
